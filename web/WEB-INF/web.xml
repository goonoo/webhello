<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
		  http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
           version="2.5">


    <servlet>
        <servlet-name>boardListServlet</servlet-name>
        <servlet-class>myboard.controller.BoardListServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>boardListServlet</servlet-name>
        <url-pattern>/board/list</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>boardViewServlet</servlet-name>
        <servlet-class>myboard.controller.BoardViewServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>boardViewServlet</servlet-name>
        <url-pattern>/board/view</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>boardNewServlet</servlet-name>
        <servlet-class>myboard.controller.BoardNewServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>boardNewServlet</servlet-name>
        <url-pattern>/board/new</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>boardEditServlet</servlet-name>
        <servlet-class>myboard.controller.BoardEditServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>boardEditServlet</servlet-name>
        <url-pattern>/board/edit</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>boardRemoveServlet</servlet-name>
        <servlet-class>myboard.controller.BoardRemoveServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>boardRemoveServlet</servlet-name>
        <url-pattern>/board/remove</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>helloServlet</servlet-name>
        <servlet-class>hello.HelloServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>helloServlet</servlet-name>
        <url-pattern>/hello</url-pattern>
    </servlet-mapping>

</web-app>
